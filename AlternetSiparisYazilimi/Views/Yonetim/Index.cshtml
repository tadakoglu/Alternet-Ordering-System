@model IEnumerable<AlternetSiparisYazilimi.Models.Urun>

@{
    ViewData["Title"] = "Yönetim Paneli";
    ViewData["SubTitle"] = "Ürün Kataloğu";
    Layout = "~/Views/Shared/_YonetimPaneliLayout.cshtml";
}
Uygulama Dil/Bölge Kültürü: @System.Globalization.CultureInfo.CurrentUICulture
<div class="text-left m-2">
    <a asp-action="Listele" asp-controller="Urun" class="btn btn-outline-secondary">Geri Dön</a>
    <a asp-action="Listele" asp-controller="Siparis" class="btn btn-info">Gelen Siparişler</a>
    <a asp-action="UrunOlustur" class="btn btn-primary">Yeni Ürün Ekle</a>
</div>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Ürün Adı</th>
        <th>Açıklama</th>
        <th>Kategori</th>
        <th class="text-right">Fiyat</th>
        <th class="text-center">Ne Yapmak İstersiniz?</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td class="text-right">@u.UrunID</td>
            <td>@u.Isim</td>
            <td>@u.Aciklama</td>
            <td>@u.Kategorisi</td>
            <td class="text-right">@u.Fiyat.ToString("c")</td>
            <td class="text-center">

                <form asp-action="UrunuSil" method="post">
                    @*bu a yi form içine aldım ki düzenle ve sil butonu yan yana olsun, form ile bir alakası yok*@
                    <a asp-action="Duzenle" asp-route-UrunID="@u.UrunID" class="btn btn-sm btn-success">
                        Düzenle
                    </a>

                    <input type="hidden" name="UrunID" value="@u.UrunID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Sil
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
