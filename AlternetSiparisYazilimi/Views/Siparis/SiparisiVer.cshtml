@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Siparis

@{
    IList<string> SehirListesi = new List<string> { "Denizli", "İzmir", "İstanbul", "Ankara" };
    SelectList Sehirler = new SelectList(SehirListesi);
}
<div style="margin-left:10%; margin-right:10%; margin-top:50px; padding-top:2%">
    <h4>Siparişinizi Tamamlayalım,</h4>
    <p>Lütfen sipariş detaylarınızı girin, ürünlerinizi hemen paketleyelim</p>
</div>
<div style="margin-left:10%; margin-right:10%" asp-validation-summary="All" class="text-danger"></div>
@*Model Binding İşlemleri*@

<form style="margin-left:10%; margin-right:10%" asp-action="SiparisiVer" method="post">
    <h6>Alıcı</h6>
    <div class="form-group">
        <label>Alıcı İsmi:</label><input asp-for="Alici" class="form-control" />
        <span asp-validation-for="Alici"></span>
    </div>
    <h6>Adres Bilgileri</h6>
    <div class="form-group">
        <label>Satır 1:</label><input asp-for="AdresSatiri1" class="form-control" />
        <span asp-validation-for="AdresSatiri1"></span>
    </div>

    <div class="form-group">
        <label>Satir 2:</label><input asp-for="AdresSatiri2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Satir 3:</label><input asp-for="AdresSatiri3" class="form-control" />
    </div>
    @*<div class="form-group">
            <label>Sehir:</label><input asp-for="Sehir" class="form-control" />
        </div>*@

    <div class="form-group">
        <label>Sehir:</label>
        <select asp-for="Sehir" asp-items="@Sehirler" style="background-color:white; color:black" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            <option value="">Lütfen şehir seçiniz</option>
        </select>
        <span asp-validation-for="Sehir"></span>
    </div>


    <div class="form-group">
        <label>Posta Kodu:</label><input asp-for="PostaKodu" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ülke:</label><input value="Türkiye" asp-for="Ulke" class="form-control" />
        <span asp-validation-for="Ulke"></span>
    </div>
    <div class="text-center">
        <input class="btn btn-danger" type="submit" value="Siparişi Ver" />
    </div>
</form>